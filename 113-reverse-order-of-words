public String reverseWordsInASentence(String sentence){
    List<string> words = sentence.split(' ');

    if(sentence==''){
        return '';
    }
    if(sentence=null){
        return null;
    }

    Integer n = words.size() - 1;
    String reverseWords = '';

    for (; n >= 0; n -= 1) {
        reverseWords += words[n] + ' ';
    }
    
    return reverseWords.trim();
}
